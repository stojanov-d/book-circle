@model BookCircle.Models.Book

@{
    ViewBag.Title = "Edit";
}

<head>
    <style>
        body {
            background-color: floralwhite;
        }

            body > div:nth-child(2) > form {
                padding: 16px;
            }
    </style>
</head>

<body>

    <section class="vh-100" style="background-color: #9A616D;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card floralwhite" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <h2 class="">Editing the book <span class="oswald-font blue-text ">„@Model.BookTitle“</span></h2>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.Id)

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.BookTitle, "Title", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.BookTitle, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.BookTitle, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.BookDescription, "Description", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.BookDescription, new { htmlAttributes = new { @class = "form-control", rows = "20" } })
                                                    @Html.ValidationMessageFor(model => model.BookDescription, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.BookAuthor, "Author", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.BookAuthor, new { htmlAttributes = new { @class = "form-control", rows = "50" } })
                                                    @Html.ValidationMessageFor(model => model.BookAuthor, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.BookPublisher, "Published by", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => model.BookPublisher, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.BookPublisher, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            @*<div class="form-group">
                                                    @Html.LabelFor(model => model.BookRating, "Rating", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                                                    <div class="col-md-10">
                                                        @Html.EditorFor(model => model.BookRating, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.BookRating, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>*@

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.BookRating, "Rating", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                                                <div class="col-md-10">
                                                    <div class="rating">
                                                        @Html.RadioButtonFor(model => model.BookRating, 5, htmlAttributes: new { id = "5", name = "rating" })
                                                        @Html.Label("☆", new { @for = "5" })
                                                        @Html.RadioButtonFor(model => model.BookRating, 4, htmlAttributes: new { id = "4", name = "rating" })
                                                        @Html.Label("☆", new { @for = "4" })
                                                        @Html.RadioButtonFor(model => model.BookRating, 3, htmlAttributes: new { id = "3", name = "rating" })
                                                        @Html.Label("☆", new { @for = "3" })
                                                        @Html.RadioButtonFor(model => model.BookRating, 2, htmlAttributes: new { id = "2", name = "rating" })
                                                        @Html.Label("☆", new { @for = "2" })
                                                        @Html.RadioButtonFor(model => model.BookRating, 1, htmlAttributes: new { id = "1", name = "rating" })
                                                        @Html.Label("☆", new { @for = "1" })

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group pt-3">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Save" class="btn btn-success" />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="pt-3">
                                            @Html.ActionLink("Back to List", "Index", "Index", new { @class = "btn btn-outline-secondary" })
                                        </div>
                                    }



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#BookDescription").replaceWith("<textarea class='form-control text-box multi-line' rows='5'></textarea>")
        });
    </script>
}
