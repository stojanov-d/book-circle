@model BookCircle.Models.Book

@{
    ViewBag.Title = "Edit";
}

<head>
    <style>
        body{
            background-color:floralwhite;
        }
        body > div:nth-child(2) > form{
            padding:16px;
        }
    </style>
</head>

<body>
    <h3 class="p-3">Editing the book <span class="oswald-font blue-text ">@Model.BookTitle</span></h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.BookTitle, "Title", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BookTitle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BookTitle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BookDescription, "Description", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BookDescription, new { htmlAttributes = new { @class = "form-control", rows = "20" } })
            @Html.ValidationMessageFor(model => model.BookDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BookAuthor, "Author", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BookAuthor, new { htmlAttributes = new { @class = "form-control", rows = "50" } })
            @Html.ValidationMessageFor(model => model.BookAuthor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BookPublisher, "Published by", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BookPublisher, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BookPublisher, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BookRating, "Rating", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BookRating, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BookRating, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group pt-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
    }

    <div class="p-3">
        @Html.ActionLink("Back to List", "Index", "Index", new { @class = "btn btn-outline-secondary" })
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#BookDescription").replaceWith("<textarea class='form-control text-box multi-line' rows='5'></textarea>")
        });
    </script>
}
